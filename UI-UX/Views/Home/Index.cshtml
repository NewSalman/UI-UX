@{
    ViewData["Title"] = "Home Page";
    ViewData["ContainerType"] = "container-fluid";
}


<div class="sections sections-1">
    <h3 class="pl-3 font-weight-bold mb-3">Buy Your Design Here</h3>

    <h2 class="display-2">We'll Make The Best Of The Best</h2>
</div>





<div class="row my-5 align-content-center justify-content-around">
    <div class="col-md-4">
        <div class="Cards">
            <div class="Cards-head">
                <h3 class="display-4">Web Design</h3>
            </div>

            <div class="Cards-body">
                <p class="text-black-50">Fully responsive and beautiful, that makes your eyes feel comfort</p>
            </div>

            <div class="Cards-footer d-flex justify-content-center">
                <button class="btn btn-success py-1 px-3">Check Out</button>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="Cards">
            <div class="Cards-head">
                <h3 class="display-4">Mobile Design</h3>
            </div>

            <div class="Cards-body">
                <p class="text-black-50">Fully responsive and beautiful, that makes your eyes feel comfort</p>
            </div>
            
            <div class="Cards-footer d-flex justify-content-center">
                <a asp-action="CheckOut" class="btn btn-success py-1 px-3">Check Out</a>
            </div>
        </div>
    </div>
</div>

<div class="sections sections-3">
    <h2 class="display-2 text-secondary">Thanks To Our Costumer</h2> 

    <div class="row justify-content-around align-content-center">
        <div class="col-md-3">
            <img src="~/images/tesla_logo.png" style="width:150px;height:150px" class="text-center" />
        </div>
        <div class="col-md-3">
            <img src="~/images/Microsoft-svg.png" style="width:150px;height:150px" class="text-center" />
        </div>
        <div class="col-md-3">
            <img src="~/images/NASA-vector-logo.png" style="width:200px;height:150px" class="text-center" />
        </div>
        <div class="col-md-3">
            <img src="~/images/Mercedes-svg.png" style="width:220px;height:150px" class="text-center" />
        </div>

    </div>
</div>